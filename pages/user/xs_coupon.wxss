.page {
    width: 100%;
}

.order {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 180rpx;
    border-bottom: 1px solid #ccc;
    border-top: 1px solid #ccc;
    font-size: 12px;
}

.left {
    width: 25%;
    padding: 20rpx 20rpx;
    line-height: 180rpx;
}

.right {
    width: 15%;
    line-height: 180rpx;
    float: right;
}

.center {
    width: 60%;
    display: flex;
    flex-direction: column;
    padding-top: 20rpx;
}

.money {
    font-weight: bold;
    font-size: 26rpx;
}

.centertext {
    margin-top: 10rpx;
}

.image {
    width: 170rpx;
    height: 140rpx;
    line-height: 180rpx;
}