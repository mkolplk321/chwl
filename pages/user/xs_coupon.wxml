<scroll-view bindscrolltolower="loadMore" class="list" lowerThreshold="800" scrollY="true" style="height: {{windowHeight}}px; width: {{windowWidth}}px;">
    <view class="search_no" wx:if="{{!teams.length}}">
        <view class="font_14">
            <image class="scimg" src="../../images/search_no.png"></image>
        </view>
        <text>没有可用优惠券/(ㄒoㄒ)/~~</text>
    </view>
    <view class="order" wx:for="{{teams}}" wx:for-item="coupon">
        <view class="left">
            <image class="image" src="/images/123.jpg"></image>
        </view>
        <view class="center">
            <text class="money centertext">{{coupon.money}}元</text>
            <text class="centertext">推广收入 : {{coupon.quantity}}</text>
            <text class="centertext">订单扣费：{{coupon.expire_time}}</text>
        </view>
        <view class="right">
            <text>{{coupon.status}}</text>
        </view>
    </view>
</scroll-view>
<view>
    <loading hidden="{{hidden}}">
        加载中...
    </loading>
</view>
