.page {
    padding-left: 10rpx;
}

.header {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 12px;
    font-family: -apple-system-font,"Helvetica Neue",sans-serif;
    margin-top: 20rpx;
    color: #999;
    margin-left: 10rpx;
}

.content {
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 140rpx;
    border-bottom: 1px solid #e8e8e8;
    border-top: 1px solid #e8e8e8;
}

.left {
    width: 25%;
    padding: 20rpx 20rpx;
}

.center {
    width: 50%;
    display: flex;
    flex-direction: column;
    padding-top: 20rpx;
}

.right {
    width: 25%;
    line-height: 140rpx;
    margin-top: 21rpx;
}

.centertext {
    margin-top: 10rpx;
}